{{> authHeader}}
    <div class="card-body login-card-body">
      <p class="login-box-msg">Sign in to start your session</p>
      {{{ flashMessage @flash }}}

      <form method="post" action="{{@adminUrl}}/login">
        <div class="mb-3">
          <div class="input-group">
            <input type="email" class="form-control" placeholder="Email" aria-label="Email" name="email" value="{{@body.email}}">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          {{{  showError error "email"  }}}
        </div>

        <div class="mb-3">
          <div class="input-group">
            <input type="password" class="form-control" placeholder="Password" aria-label="Password" name="password" value="">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          {{{ showError error "password"  }}}
        </div>

        <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
              <input type="checkbox" id="remember">
              <label for="remember">
                Remember Me
              </label>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
          </div>
          <!-- /.col -->
        </div>
      </form>

      <p class="mb-1">
        <a href="{{@adminUrl}}/forgot-password">I forgot my password</a>
      </p>
    </div>
    <!-- /.login-card-body -->
{{> authFooter}}